<script>
  $(function() {
    $('.sync-button').click(function() {
      $(this).hide();
      $(this).siblings('.sync-spinner').show();

      var target = $(this).attr('href');
      $.get(target);
      return false;
    });
  });

  $(function(){
    $('#add-domain-modal').modal();
    $('#submit').click(function() {
      $.post('<%= domains_path %>', $( "#add-domain" ).serialize())
            .done(function(data) {
              window.location = data.target;
            })
            .fail(function(data) {
              if (data.status == 400) {
                // validation error
                $('#form-content').html(data.responseText);
              } else {
                alert('Unexpected error. Please raise a bug at github.com/jbrunton/jira-team-metrics.');
              }
            });
    });
  });

  App.cable.subscriptions.create("SyncChannel",
      {
        received: function (data) {
          var row = $('#domain-row-' + data.domain);
          row.find('.sync-spinner').hide();
          row.find('.sync-button').show();
        }
      });

</script>

<h3>Domains</h3>

<table>
  <thead>
    <tr>
      <td>Name</td>
      <td>Url</td>
      <td></td>
    </tr>
  </thead>
  <% @domains.each do |domain| %>
      <tr id="domain-row-<%= domain.id %>">
        <td><%= domain['name'] %></td>
        <td><%= domain['url'] %></td>
        <td>
          <a href="<%= domain_path(domain) %>" class="waves-effect waves-light btn">
            View Details
          </a>

          <a href="<%= domain_path(domain) %>/sync" class="sync-button waves-effect waves-light btn">
            Process
          </a>
          <div class="sync-spinner preloader-wrapper small active" style="vertical-align: middle; display: none;">
            <div class="spinner-layer spinner-green-only">
              <div class="circle-clipper left">
                <div class="circle"></div>
              </div>
              <div class="gap-patch">
                <div class="circle"></div>
              </div>
              <div class="circle-clipper right">
                <div class="circle"></div>
              </div>
            </div>
          </div>
        </td>
      </tr>
  <% end %>
</table>

<div class="fixed-action-btn">
  <a href="#add-domain-modal" class="btn-floating btn-large red">
    <i class="large material-icons">add</i>
  </a>
</div>

<!-- Modal Structure -->
<div id="add-domain-modal" class="modal bottom-sheet">
  <div id='form-content' class="modal-content">
    <%= render 'form' %>
  </div>
  <div class="modal-footer">
    <a id="submit" href="#" class="waves-effect waves-light btn">
      Add
    </a>
  </div>
</div>