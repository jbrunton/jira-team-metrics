<div id="sync-modal" class="modal bottom-sheet">
  <div id="sync-content" class="modal-content">
    <% @credentials = Credentials.new unless @credentials %>
    <form id="sync-form" class="col s12">
      <div class="row">
        <div class="input-field col s6">
          <%= form_input(@credentials, :username) %>
        </div>
        <div class="input-field col s6">
          <%= form_input(@credentials, :password, type: :password) %>
        </div>
      </div>
    </form>
  </div>
  <div class="modal-footer">
    <a id="sync" href="#" class="waves-effect waves-light btn">
      Sync
    </a>
  </div>
</div>